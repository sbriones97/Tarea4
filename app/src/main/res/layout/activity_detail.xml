<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView android:layout_width="match_parent"
    android:layout_height="180dp"
    android:scaleType="centerCrop"
    android:id="@+id/activity_detail_image" />

    <EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_detail_title" />

    <EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_detail_store"/>

    <EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_detail_location"/>

    <EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_detail_phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/activity_detail_guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="left"
            android:text="SAVE"
            android:textSize="15dp"
            android:onClick="guardar"/>
        <Button
            android:id="@+id/activity_detail_cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="right"
            android:text="CANCEL"
            android:onClick="cancelar"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>